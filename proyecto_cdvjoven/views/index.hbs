<div id="contacto" class="row py-4">
  <div class="col-md-4 offset-md-2">
    <h2>Visitanos</h2>
    <div class="map">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3540.0836729106704!2d-58.82161522440348!3d-27.466654316576683!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94456b5d18951301%3A0x4f0df1035fd752e!2sCatedral%20de%20Vida!5e0!3m2!1ses!2sar!4v1717497147585!5m2!1ses!2sar"></iframe>
    </div>
  </div>
  <div class="col-md-4 mt-4 mt-sm-0">
    <h2>contactanos</h2>
    <div class="form-container">
      <form id="formContacto" class="row g-3" action="/" method="post">
        <div class="col col-md-6">
          <label for="nombre" class="form-label">Nombre</label>
          <input type="text" class="form-control" id="nombre" name="nombre">
        </div>
        <div class="col col-md-6">
          <label for="apellido" class="form-label">Apellido</label>
          <input type="text" class="form-control" id="apellido" name="apellido">
        </div>
        <div class="col-12">
          <label for="email" class="form-label">email</label>
          <input type="email" class="form-control" id="aemail" name="email" placeholder="email@email.com">
        </div>
        <div class="col-12">
          <label for="tel" class="form-label">Tel</label>
          <input type="text" class="form-control" id="tel" name="tel" placeholder="...">
        </div>
        <div class="col-12">
          <label for="mensaje" class="form-label">mensaje</label>
          <textarea class="form-control" id="mensaje" name="mensaje" rows="3"></textarea>
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">enviar</button>
        </div>
      </form>
      {{message}}
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const modal = document.getElementById('modalNovedad');

      modal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;

        const titulo = button.getAttribute('data-titulo');
        const subtitulo = button.getAttribute('data-subtitulo');
        const cuerpo = button.getAttribute('data-cuerpo');
        const imagen = button.getAttribute('data-imagen');

        // T铆tulo
        document.getElementById('modalNovedadLabel').textContent = titulo;

        // Subt铆tulo
        document.getElementById('modalNovedadSubtitulo').textContent = subtitulo;

        // Cuerpo
        document.getElementById('modalNovedadCuerpo').innerHTML = cuerpo;

        // Imagen
        const img = document.getElementById('modalNovedadImagen');
        if (imagen && !imagen.includes('noimage.jpg')) {
          img.src = imagen;
          img.classList.remove('d-none');
        } else {
          img.classList.add('d-none');
        }
      });
    });
  </script>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('formContacto');

      form.addEventListener('submit', async (e) => {
        e.preventDefault(); // Prevenir recarga

        const formData = new FormData(form);

        try {
          const res = await fetch(form.action, {
            method: 'POST',
            body: formData
          });

          if (res.ok) {
            const contenedorMensaje = document.createElement('div');
            contenedorMensaje.className = 'alert alert-success mt-3';
            contenedorMensaje.textContent = 'Gracias por tu mensaje. Te responderemos pronto.';

            form.parentElement.appendChild(contenedorMensaje);
            form.reset();

            //  Este bloque hace que desaparezca despu茅s de 5 segundos
            setTimeout(() => {
              contenedorMensaje.remove();
            }, 5000);
          } else {
            alert('Hubo un error al enviar el formulario.');
          }
        } catch (err) {
          alert('Error de conexi贸n al enviar el formulario.');
        }
      });
    });
  </script>